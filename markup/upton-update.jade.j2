        .col-md-12
          div(class="social-icons")
            a(class="twitter", href='https://twitter.com/home?status=My%20${{amount_donations}}%20pledged%20to%20%23MAYDAY.US%20can%20be%20used%20to%20take%20down%20corrupt%20congressman%20Upton'): img(src="/static/share_twitter.png")
